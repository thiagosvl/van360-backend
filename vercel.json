{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.ts"
    }
  ],
  "crons": [
    {
      "path": "/jobs/monitor-passageiros",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/jobs/monitor-motoristas",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/jobs/gerar-cobrancas-mensais",
      "schedule": "0 11 * * *"
    },
    {
      "path": "/jobs/gerar-renovacoes-assinatura",
      "schedule": "0 11 * * *" 
    },
    {
      "path": "/jobs/monitor-validacao-pix",
      "schedule": "0 * * * *"
    },
    {
      "path": "/jobs/retry-repasses",
      "schedule": "15 * * * *"
    },
    {
      "path": "/jobs/monitor-repasses",
      "schedule": "30 * * * *"
    },
    {
      "path": "/jobs/reconciliacao-entrada",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/jobs/whatsapp-health-check",
      "schedule": "0 */4 * * *" 
    }
  ]
}

